<div id="superform">
	<%= form_tag("/weather", method: :get) do  %>
 		<%= label_tag 'City' %>
 		<%= text_field_tag :city  %>
 		<%= submit_tag "Go" %>
	<% end %>
</div>

<div id="h1">
