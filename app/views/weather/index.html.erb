<div id="superform">
<%= form_tag("/weather", method: :get) do  %>
 <%= label_tag 'City' %>
 <%= text_field_tag :city  %>
 <%= submit_tag "Go" %>
<% end %>
</div>

<container id="weather" data-city="<%= params[:city] %>">

	<% if @timenow.hour>17&&@timenow.hour<22 %>
	<h1 class="time">Good Evening</h1>
	<% elsif @timenow.hour>22&&@timenow.hour<6 %>
	<h1 class="time">Good Night</h1>
	<% elsif @timenow.hour>6&&@timenow.hour<22 %>
	<h1 class="time">Good Morning</h1 class="time">
	<% end %>
